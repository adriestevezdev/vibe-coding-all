# Environment variables example
# Copy this file to .env and .env.local and fill with your values

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/vibe_coding
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=vibe_coding

# Backend
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA=86400

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# Polar.sh (Payment system)
POLAR_API_KEY=your-polar-api-key-here
POLAR_WEBHOOK_SECRET=your-polar-webhook-secret-here

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment
NODE_ENV=development
PYTHON_ENV=development
